package online_bookstore_management_system;


public class PublisherFinanceService implements PublisherFinance {

    private double totalRevenue = 0.0;

    @Override
    public void recordInitialStockRevenue(Book book, int quantity) {
        double amount = book.getPrice() * quantity;
        totalRevenue += amount;
    }

    public double getTotalRevenue() {
        return totalRevenue;
    }
}
