package online_bookstore_management_system;

import java.util.Map;

public class PublisherAnalyticsService implements PublisherAnalytics {

    @Override
    public void recordBookPublished(Publisher publisher, Book book) {
        Analytics.record(
                "book_published",
                Map.of(
                        "publisher", publisher.getName(),
                        "title", book.getTitle()
                )
        );
    }
}
